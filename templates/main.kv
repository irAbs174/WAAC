<NavDrawer@MDNavigationDrawer>:
    radius: 0, dp(16), dp(16), 0

    MDNavigationDrawerMenu:

        MDNavigationDrawerHeader:
            padding: "16dp", 0, "16dp", "16dp"
            spacing: "16dp"

            MDIcon:
                icon: "robot-love"
                theme_font_size: "Custom"
                font_size: "56sp"
                theme_icon_color: "Custom"
                icon_color: self.theme_cls.primaryColor

            MDLabel:
                text: "Menu"
                font_style: "Display"
                role: "medium"
                theme_line_height: "Custom"
                line_height: 0
                adaptive_height: True
                theme_text_color: "Custom"
                text_color: self.theme_cls.primaryColor

        MDNavigationDrawerLabel:
            text: "Woocommerce Ai Comment"
            theme_text_color: "Custom"
            text_color: self.theme_cls.primaryColor

        MDNavigationDrawerItem:

            MDNavigationDrawerItemLeadingIcon:
                icon: "plus"

            MDNavigationDrawerItemText:
                text: "Auto Comment"

        MDNavigationDrawerDivider:

        MDNavigationDrawerItem:

            MDNavigationDrawerItemLeadingIcon:
                icon: "help"

            MDNavigationDrawerItemText:
                text: "help"

        MDNavigationDrawerItem:

            MDNavigationDrawerItemLeadingIcon:
                icon: "information-outline"

            MDNavigationDrawerItemText:
                text: "About us"


<TopAppBar@MDCard>:
    padding: "4dp"
    size_hint_x: .995
    size_hint_y: .09
    pos_hint: {"center_y": .5, "center_x": .5, "top": .995}
    radius: [0, 0, 25, 25]


<BottomAppBar@MDCard>:
    padding: "4dp"
    size_hint_x: .995
    size_hint_y: .04
    pos_hint: {"center_y": .02, "center_x": .5, "bottom": 1}
    radius: [25, 25, 0, 0]


<bottomSheet@MDBottomSheet>:
    id: root.id
    sheet_type: "standard"
    size_hint_y: .2


<MobileView>
    TabletView

<TabletView>
    md_bg_color: self.theme_cls.backgroundColor

    MDNavigationLayout:

        MDScreenManager:
            MDScreen:
                MDFloatLayout:
                    TopAppBar:
                        MDRelativeLayout:
                            MDIconButton:
                                icon: "menu"
                                pos_hint: {"left": 1, "center_y": .5}
                                on_release: nav_drawer.set_state("toggle")
                    
                            MDLabel:
                                text: "Add Auto Comment !"
                                adaptive_size: True
                                pos_hint: {"center_y": .5, "center_x": .5}
                                bold: True
                                theme_font_name: "Custom"
                                font_name: "nasalization"
                                theme_font_size: "Custom"
                                font_size: "19dp"
                    
                            MDIconButton:
                                pos_hint: {"left": 1, "right": 0,"center_y": .5, "center_x": .94}
                                icon: "theme-light-dark"
                                on_release: app.switch_theme()
                    

                    MDCard:
                        padding: "4dp"
                        size_hint_y: .4
                        size_hint_x: .47
                        pos_hint: {"center_y": .68, "center_x": .74}
                        radius: [25, 2, 25, 2]

                        MDIconButton:
                            icon: "heart"
                            pos_hint: {"top":1, "right":1}

                    MDCard:
                        padding: "4dp"
                        size_hint_y: .4
                        size_hint_x: .47
                        pos_hint: {"center_y": .27, "center_x": .74}
                        radius: [2, 25, 2, 25]

                        MDIconButton:
                            icon: "heart"
                            pos_hint: {"top":1, "right":1}


                    MDCard:
                        padding: "4dp"
                        size_hint_y: .4
                        size_hint_x: .47
                        pos_hint: {"center_y": .68, "center_x": .255}
                        radius: [2, 25, 2, 25]

                        MDIconButton:
                            icon: "heart"
                            pos_hint: {"top":1, "right":1}


                    MDCard:
                        padding: "4dp"
                        size_hint_y: .4
                        size_hint_x: .47
                        pos_hint: {"center_y": .27, "center_x": .255}
                        radius: [25, 2, 25, 2]
                        MDIconButton:
                            icon: "heart"
                            pos_hint: {"top":1}

                    BottomAppBar:
                        on_release: bottom_sheet.set_state("open")
                        MDRelativeLayout:
                            MDIcon:
                                style: "outlined"
                                pos_hint : {'center_x':.5, 'center_y': .5}
                                icon: "arrow-up-circle"
                    
                    bottomSheet:
                        id: bottom_sheet
                        on_release: bottom_sheet.set_state("open")
                        MDRelativeLayout:
                            MDCard:
                                size_hint_y: .15
                                pos_hint:{'top': 1}
                                on_release: bottom_sheet.set_state("close")
                                MDRelativeLayout:
                                    MDIcon:
                                        style: "outlined"
                                        pos_hint : {'center_x':.5, 'center_y': .5}
                                        icon: "arrow-down-circle"

                            MDCard:
                                style: "outlined"
                                size_hint_y: .60
                                pos_hint: {"bottom": 1}
                                spacing: "12dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MDRelativeLayout:
                                    MDExtendedFabButton:
                                        pos_hint: {"right":1, "center_y": .5}
                                        fab_state : "expand"

                                        MDExtendedFabButtonIcon:
                                            icon: "web"
                            
                                        MDExtendedFabButtonText:
                                            text: app.persian(txt="مشاهده سایت")
                                            theme_font_name: "Custom"
                                            font_name: "nasalization"

                                    MDExtendedFabButton:
                                        pos_hint: {"center_y": .5, "center_x": .5}
                                        fab_state : "expand"

                                        MDExtendedFabButtonIcon:
                                            icon: "badge-account-alert-outline"
                            
                                        MDExtendedFabButtonText:
                                            text: app.persian(txt="گزارش خرابی")
                                            theme_font_name: "Custom"
                                            font_name: "nasalization"

                                    MDExtendedFabButton:
                                        pos_hint: {"left":1, "center_y": .5}
                                        fab_state : "expand"

                                        MDExtendedFabButtonIcon:
                                            icon: "exit-run"
                            
                                        MDExtendedFabButtonText:
                                            text: app.persian(txt="خروج")
                                            theme_font_name: "Custom"
                                            font_name: "nasalization"

        NavDrawer:
            id: nav_drawer

<DesktopView>
    TabletView

ResponsiveView:
    name: "main"